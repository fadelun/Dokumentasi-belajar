<div class="container">
    <div class="row">
        <div class="col col-md-6">
            <h2>Menambah data kontak</h2>

<% if(typeof errors != "undefined") {%>
<div class="alert alert-danger" role="alert">
  <ul>
  <% errors.forEach(error => {%>
    <li> <%= error.msg %> </li>
  <% })  %> 
</ul>
  
</div>
<%   } %>
   
            <form method="POST" action="/contact/update"  >
              <input type="hidden" name="oldNama" value="<%= (contact.oldNama)? contact.oldNama : contact.nama   %>">
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama</label>
                  <input type="text" class="form-control" name="nama" id="nama" value="<%= contact.nama  %>"  required>
                </div>
                <div class="mb-3">
                  <label for="nohp" class="form-label">No HP</label>
                  <input type="text" class="form-control" name="nohp" value="<%= contact.nohp  %>" id="nohp"  required>
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" class="form-control" name="email" value="<%= contact.email  %>" id="email">
                </div>
               
                <button type="submit" class="btn btn-primary">Edit data</button>
              </form>

        </div>
    </div>
</div>